<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryUnity</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Base application theme. -->
    <style name="ButtonRoundWhite" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/anim_round_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonRoundGrey" parent="ButtonRoundWhite">
        <item name="android:background">@drawable/anim_round_button_grey</item>
    </style>

    <style name="ButtonRoundGreen" parent="ButtonRoundWhite">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Profile Button theme. -->
    <style name="ButtonProfile" parent="Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RadioButtonGreen">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
        <item name="android:background">@null</item>
    </style>

    <style name="RadioButtonGrey">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:buttonTint">@color/colorGrey</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Editext" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:color">@color/colorAccent</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditextDescription" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/colorGrey</item>
        <item name="android:color">@color/colorAccent</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewReservation" parent="android:Widget.TextView">
        <item name="android:backgroundTint">@color/colorGrey</item>
        <item name="android:color">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DatePickerSpinner" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="SpinnerDatePickerStyle" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/DatePickerSpinner</item>
    </style>

    <style name="searchViewCustomStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:textColorHint">@color/whiteOpacity</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:colorControlActivated">@color/colorWhite</item>
    </style>
</resources>
